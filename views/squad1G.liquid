<body>
    <div class="profilecards-container" id="profilecards">
        {% for person in persons %}
        <div class="profilecards">
            <a href="/student/{{ person.id }}">
                <p><span class="title">{{ person.name }} {{ person.id }}</span></p>

                <div class="img-container">
                    {% if person.avatar %}
                    <img src=" {{ person.avatar }} " alt="leeg" height="250px" width="200px"
                        style="border:10px solid {{person.fav_color}}">

                    {% if page.var.blank? %}
                    <img class="img-placeholder" src="/images/placeholder.jpg" alt="leeg" height="250px" width="200px"
                        style="border:10px solid {{person.fav_color}}">
                    {% endif %}

                    {% else %}
                    <img class="img-placeholder" src="/images/placeholder.jpg" alt="leeg" height="250px" width="200px"
                        style="border:10px solid {{person.fav_color}}">
                    {% endif %}
                </div>

                <div class="like-button-container">
                    <button class="like-button" id="like-button">
                        &#x2764;&#xfe0f;</button>
                </div>
            </a>
        </div>
        {% endfor %}
    </div>

    <div class="back-button-container">
        <a href="/">Terug naar home</a>
    </div>

